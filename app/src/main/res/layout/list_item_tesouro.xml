<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hapticFeedbackEnabled="false"
    android:padding="@dimen/activity_horizontal_margin"
    android:stretchColumns="0">

    <TableRow android:layout_width="match_parent">

        <TextView
            android:id="@+id/list_item_nome_tesouro_textview"
            android:layout_span="3"
            android:text="IPCA" />
    </TableRow>

    <TableRow android:layout_width="match_parent">

        <TextView
            android:layout_span="2"
            android:text="Vencimento" />

        <TextView
            android:id="@+id/list_item_vencimento_tesouro_textview"
            android:layout_span="1"
            android:width="@dimen/tesouro_compra_column"
            android:text="15/08/2024"
            android:textAlignment="viewEnd" />
    </TableRow>

    <TableRow android:layout_width="match_parent">
        <TextView/>
        <TextView
            android:layout_span="1"
            android:width="@dimen/tesouro_compra_column"
            android:text="Compra"
            android:textAlignment="viewEnd" />

        <TextView
            android:layout_span="1"
            android:width="@dimen/tesouro_venda_column"
            android:text="Venda"
            android:textAlignment="viewEnd" />
    </TableRow>

    <TableRow android:layout_width="match_parent">

        <TextView android:text="Taxa de rendimento" />

        <TextView
            android:id="@+id/list_item_rendimento_compra_tesouro_textview"
            android:layout_span="1"
            android:width="@dimen/tesouro_compra_column"
            android:text="9,63"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/list_item_rendimento_venda_tesouro_textview"
            android:layout_span="1"
            android:width="@dimen/tesouro_venda_column"
            android:text="9,63"
            android:textAlignment="viewEnd" />
    </TableRow>

    <TableRow android:layout_width="match_parent">

        <TextView android:text="Preço unitário" />

        <TextView
            android:id="@+id/list_item_preco_compra_tesouro_textview"
            android:layout_span="1"
            android:width="@dimen/tesouro_compra_column"
            android:text="1.042,52"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/list_item_preco_venda_tesouro_textview"
            android:layout_span="1"
            android:width="@dimen/tesouro_venda_column"
            android:text="1.035,45"
            android:textAlignment="viewEnd" />
    </TableRow>

</TableLayout>
