<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_heigh"
    android:paddingEnd="@dimen/list_item_padding"
    android:paddingStart="@dimen/list_item_padding"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/item_moeda_code_textview"
        android:layout_width="@dimen/icon_list_size"
        android:layout_height="@dimen/icon_list_size"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        tools:text="EUR" />

    <LinearLayout
        android:id="@+id/lines_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/list_item_padding"
        android:layout_marginRight="@dimen/list_item_padding"
        android:layout_toEndOf="@id/item_moeda_code_textview"
        android:layout_toStartOf="@+id/secondary_action"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_item_padding"
        android:paddingTop="@dimen/list_item_padding">

        <TextView
            tools:text="Euro"
            android:id="@+id/item_moeda_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            tools:text="R$4,30"
            android:id="@+id/item_moeda_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondary_action"
        android:orientation="vertical"
        android:layout_width="@dimen/icon_list_size"
        android:layout_height="@dimen/icon_list_size"
        android:layout_marginStart="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_alignParentEnd="true">

        <TextView
            tools:text="18"
            android:id="@+id/item_moeda_day_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            tools:text="APR"
            android:id="@+id/item_moeda_month_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="12sp"/>

    </LinearLayout>
</RelativeLayout>